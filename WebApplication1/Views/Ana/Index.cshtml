@model List<WebApplication1.Models.Talep>
@{
    ViewBag.Title = "Index";

}




    <div class="body_scroll">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>Talep Listesi</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Aero</a></li>
                        <li class="breadcrumb-item active">Pages</li>
                        <li class="breadcrumb-item active">Talep Listesi</li>
                    </ul>
                    <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
                </div>
                <div class="col-lg-5 col-md-6 col-sm-12">
                    <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div id="liste" class="table-responsive">
                            <table class="table table-hover c_table theme-color" id="tablem">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Talep Başlığı</th>
                                        <th>Talep Ayrıntısı</th>
                                        <th>Talep Tarihi</th>
                                        <th>Yapılan İşlem</th>
                                        <th>Talep Durumu</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td><strong><a href="javascript:void(0);">@item.talepbaslik</a></strong></td>
                                            <td>@item.tblKisi.adsoyad </td>
                                            <td>@item.tblKisi.tblGorevYeri.gorevyeri</td>
                                            <td>
                                                <a title="Talebi Gör" href="#" class="btn btn-primary btn-sm"><i class="zmdi zmdi-eye"></i></a>
                                                <a title="Çıktısını al" href="#" class="btn btn-warning btn-sm"><i class="zmdi zmdi-print"></i></a>
                                                <a title="Talebi Yönlendir" href="#" class="btn btn-danger btn-sm"><i class="zmdi zmdi-email"></i></a>
                                            </td>
                                            <td>
                                                @{
                                                    if (@item.talepstatus == false)
                                                    {
                                                        <span style="color:red; font-weight:bolder"> @("Henüz Yapılmadı")</span>
                                                    }
                                                    else
                                                    { <span style="color:forestgreen; font-weight:bolder"> @("Tamamlandı") </span>
                                                    }


                                                }

                                            </td>
                                        </tr>
                                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
